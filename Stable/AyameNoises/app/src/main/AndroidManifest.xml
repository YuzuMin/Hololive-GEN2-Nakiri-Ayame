<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yuzumin.ayamenoises">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.yuzumin.ayamenoises.application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HiddenPersonalArchive" />
        <activity
            android:name="com.yuzumin.ayamenoises.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AppItemDownloads"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yuzumin.ayamenoises.LegalInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yuzumin.ayamenoises.Reader"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yuzumin.ayamenoises.AppMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yuzumin.ayamenoises.activities.AlarmActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yuzumin.ayamenoises.ClickerSettings"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yuzumin.ayamenoises.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yuzumin.ayamenoises.activities.RingActivity"
            android:screenOrientation="portrait" />

        <receiver android:name="com.yuzumin.ayamenoises.broadcastreceiver.AlarmBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name="com.yuzumin.ayamenoises.service.AlarmService" />
        <service android:name="com.yuzumin.ayamenoises.service.RescheduleAlarmsService" />
    </application>

</manifest>